<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:alpha="0.8"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/favProfileCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="100dp">

            <ImageView
                android:id="@+id/favavMusicianProfileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_launcher_foreground" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="305dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/favProfileCardView"
            android:padding="4dp">

            <TextView
                android:id="@+id/favMusicainFullName"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="false"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/favMessageIcon"
                android:lines="1"
                android:text="First Last"
                android:textAlignment="center"
                android:textColor="#272424"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/favMusicainFullName"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/favMessageIcon"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/favMicIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:srcCompat="@drawable/mic"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/favAcousticGuitarIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:srcCompat="@drawable/acoustic_guitar"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/favElectricGuitarIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:srcCompat="@drawable/electric_guitar"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/favBassIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:srcCompat="@drawable/bass_guitar"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/favKeysIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:srcCompat="@drawable/keyboard"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/favDrumIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:srcCompat="@drawable/drummer"
                    tools:visibility="visible" />

            </LinearLayout>

            <ImageView
                android:id="@+id/favMessageIcon"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/favRemoveIcon"
                android:cropToPadding="false"
                android:padding="0dp"
                app:srcCompat="@drawable/ic_baseline_message_24" />

            <ImageView
                android:id="@+id/favRemoveIcon"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:cropToPadding="false"
                android:padding="0dp"
                app:srcCompat="@drawable/ic_baseline_delete_forever_24" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>